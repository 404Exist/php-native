<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for our project.</description>
    <rule ref="PSR12"/>

    <file>app</file>
    <file>resources</file>
    <file>tests</file>

    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <file>tests</file>
        <exclude-pattern>./tests/*</exclude-pattern>
    </rule>

    <arg value="p"/>
</ruleset>
